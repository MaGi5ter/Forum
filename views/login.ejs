<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style_login.css">
    <title>Document</title>
</head>
<body>

    <div id="navbar_top">

        <div id="navbar">

            <div id="left">
                <a href="/"><h2>GIKAM</h2></a>
                <!-- <h2>GIKAM</h2> -->
            </div>

            <div id="right">
                <a href="/" id="a_button_right">HOME</a>
            </div>
                
        </div>

    </div>


    <div id="container">

        <br>

        <h2 id="loginh2">Login Here</h2>

        <h3 id="login_error_h3"><%= error_login %></h3>

        <div id="login_form">

            <form action="/auth/login" method="post">

                <label for="login">Login</label>
                <br>
                <input type="text" name="login" id="login_login">
                <br>
                <label for="password">Password</label>
                <br>
                <input type="password" name="password" id="login_password">
                <br><br>
                <input class="submit" type="submit" value="Login">

            </form>

        </div>

        <h2 id="loginh2">Or Register here</h2>

        <h3 id="login_error_h3"><%= error_register %></h3>
        <h3 id="login_complete_h3"><%= complete_register %></h3>

        <div id="login_form">

            <form action="/auth/register" method="post">

                <label for="login">Login</label>
                <br>
                <input type="text" name="login" id="register_login">
                <br>
                <label for="email">E-mail</label>
                <br>
                <input type="email" name="email" id="register_email">
                <br>
                <label for="password">Password</label>
                <br>
                <input type="password" name="password" id="register_password">
                <br>
                <label for="password">Repeat Password</label>
                <br>
                <input type="password" name="password" id="register_repeat_password">
                <br><br>
                <input class="submit" type="submit" value="Register">

            </form>

        </div>

    </div>
</body>
</html>